<h1><%= @place["name"] %></h1>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Post</a>
</p>



<h2>My Posts</h2>


<div class="row">
<% for post in @posts %>
<div class="col-md-4 col-sm-9">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
</div>
<% end %>
</div>

<p>
  <a href="/places">Back to All Places</a>
</p>